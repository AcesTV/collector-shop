{
  "realm": "collector",
  "enabled": true,
  "displayName": "Collector Shop",
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "sslRequired": "external",
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "buyer",
        "description": "Acheteur - peut parcourir, acheter, suivre commandes"
      },
      {
        "name": "seller",
        "description": "Vendeur - peut créer boutiques, publier articles"
      },
      {
        "name": "admin",
        "description": "Administrateur - gestion catégories, modération"
      }
    ]
  },
  "defaultRoles": ["buyer"],
  "clients": [
    {
      "clientId": "collector-frontend",
      "name": "Collector Frontend",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "protocol": "openid-connect",
      "rootUrl": "http://localhost:3000",
      "baseUrl": "/",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost/*",
        "http://localhost:5173/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost",
        "http://localhost:5173"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:3000/*##http://localhost/*"
      },
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "collector-backend",
      "name": "Collector Backend Services",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "backend-secret-change-me",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [],
      "webOrigins": [],
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin@collector.shop",
      "email": "admin@collector.shop",
      "firstName": "Admin",
      "lastName": "Collector",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "buyer", "seller"]
    },
    {
      "username": "buyer@test.com",
      "email": "buyer@test.com",
      "firstName": "Test",
      "lastName": "Buyer",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": ["buyer"]
    },
    {
      "username": "seller@test.com",
      "email": "seller@test.com",
      "firstName": "Test",
      "lastName": "Seller",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": ["buyer", "seller"]
    }
  ],
  "scopeMappings": [
    {
      "client": "collector-frontend",
      "roles": ["buyer", "seller", "admin"]
    }
  ],
  "internationalizationEnabled": true,
  "supportedLocales": ["en", "fr"],
  "defaultLocale": "fr"
}
